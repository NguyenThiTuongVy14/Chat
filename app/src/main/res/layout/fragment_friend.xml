<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Friend_Fragment">

    <!-- Layout chính chứa phần tìm kiếm và kết quả -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Phần nhập số điện thoại tìm kiếm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- EditText nhập số điện thoại -->
            <EditText
                android:id="@+id/search_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nhập số điện thoại"
                android:inputType="phone"
                android:padding="12dp"
                android:textSize="16sp" />

            <!-- Nút Search (Nếu cần) -->
            <Button
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search" /> <!-- Nếu không cần, có thể ẩn nút này -->

        </LinearLayout>

        <!-- LinearLayout hiển thị kết quả tìm kiếm -->
        <LinearLayout
            android:id="@+id/search_result_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"

           >

            <!-- Tên người dùng tìm được -->
            <TextView
                android:id="@+id/result_name"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tên người dùng"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"/>

            <!-- Nút Add Friend -->
            <Button
                android:id="@+id/add_friend_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text="Add Friend"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List Friend"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <ListView
            android:id="@+id/lvFriend"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1" />
    </LinearLayout>
</FrameLayout>
