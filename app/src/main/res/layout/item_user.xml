<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainUser"
    >

    <!-- ImageView -->
    <ImageView
        android:id="@+id/imgItemUser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- TextView -->
    <TextView
        android:id="@+id/infoItemUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Tên Người Dùng"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/imgItemUser"
        app:layout_constraintTop_toTopOf="@id/imgItemUser"
        app:layout_constraintBottom_toBottomOf="@id/imgItemUser"
        app:layout_constraintEnd_toStartOf="@id/btnItemUser"
        app:layout_constraintHorizontal_bias="0" />

    <!-- Button -->
    <Button
        android:id="@+id/btnItemUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgItemUser"
        app:layout_constraintBottom_toBottomOf="@id/imgItemUser" />

</androidx.constraintlayout.widget.ConstraintLayout>
